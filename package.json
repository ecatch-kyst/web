{
  "name": "web",
  "license": "GPL",
  "version": "1.0.0-beta1",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.9.1",
    "@material-ui/icons": "^3.0.2",
    "deepmerge": "^3.1.0",
    "firebase": "^5.8.0",
    "i18next": "^15.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-i18next": "^10.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && yarn run build-sw && yarn run clean-cra-sw",
    "build-sw": "node ./src/wb_build.js",
    "clean-cra-sw": "rm -f build/precache-manifest.*.js && rm -f build/service-worker.js",
    "eject": "react-scripts eject",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --coverage --coverageReporters html --watch",
    "deploy:beta": "yarn build && firebase deploy -P staging --only hosting",
    "deploy": "yarn build; firebase deploy --only hosting",
    "test:ci": "CI=true react-scripts test --coverage && npx codecov -t $CODECOV_TOKEN && rm -rf coverage",
    "lh": "lighthousebot --runner=wpt --pwa=90 --perf=0 --a11y=80 --bp=80 --seo=1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "node-sass": "^4.11.0",
    "workbox-build": "^4.0.0"
  }
}
